{
  "name": "desktop",
  "productName": "Vite + React + TS + Electron",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "dotenv -e .env.development concurrently \"vite\" \"npm run watch:electron\" \"electronmon dist\"",
    "watch:electron": "tsc --watch --project tsconfig.electron.json",
    "build": "npm run build:vite && npm run build:electron",
    "cleanup": "rimraf dist out",
    "preview": "vite preview",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build:vite": "tsc && dotenv -e .env.production vite build",
    "package": "npm run cleanup && npm run build && electron-forge package",
    "make": "npm run cleanup && npm run build && electron-forge make",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.1",
    "@electron-forge/maker-deb": "6.0.1",
    "@electron-forge/maker-rpm": "6.0.1",
    "@electron-forge/maker-squirrel": "6.0.1",
    "@electron-forge/maker-zip": "6.0.1",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@typescript-eslint/eslint-plugin": "5.42.1",
    "@typescript-eslint/parser": "5.42.1",
    "@vitejs/plugin-react": "2.2.0",
    "autoprefixer": "10.4.13",
    "concurrently": "7.5.0",
    "dotenv-cli": "6.0.0",
    "electron": "21.2.3",
    "electronmon": "2.0.2",
    "eslint": "8.27.0",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "postcss": "8.4.19",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "tailwindcss": "3.2.4",
    "typescript": "4.6.4",
    "vite": "3.2.3"
  }
}
